@model BiblioTech.Models.Genero

@{
        ViewData["Title"] = "Genero";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edição de genero</title>
</head>
<body>

<h4>Genero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGenero" />
            <div class="form-group">
                <label asp-for="DescricaoGenero" class="control-label">Descrição do genero</label>
                <input asp-for="DescricaoGenero" class="form-control" />
                <span asp-validation-for="DescricaoGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

</body>
</html>
