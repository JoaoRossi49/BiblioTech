@model BiblioTech.Models.Autor

@{
        ViewData["Title"] = "Autor";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Deletar autor</title>
</head>
<body>

<h3>Tem certeza que gostaria de apagar esse autor?</h3>
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome do autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeAutor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAutor" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
</body>
</html>
