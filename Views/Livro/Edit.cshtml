@model BiblioTech.Models.Livro

@{
    ViewData["Title"] = "Livro";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edição de livro</title>
</head>
<body>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLivo" />
            <div class="form-group">
                <label for="NomeLivro" class="control-label">Nome do livro</label>
                <input asp-for="NomeLivro" class="form-control" />
                <span asp-validation-for="NomeLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IdGenero">Genero</label>
                    @Html.DropDownList("IdGenero", ViewBag.Genero as SelectList, "-- Selecione --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="QuantidadePaginas" class="control-label">Quantidade de páginas</label>
                <input asp-for="QuantidadePaginas" class="form-control" />
                <span asp-validation-for="QuantidadePaginas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IdAutor">Autor</label>
                    @Html.DropDownList("IdAutor", ViewBag.Autor as SelectList, "-- Selecione --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
